@using System.Web.UI.WebControls
<!--tutaj podstawowy template-->

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/robert.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/LoggedIn.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/loggedInPartials.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <div id="page-container"class="container-fluid">
        <nav class="navbar navbar-default  navbar-fixed-top">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand" id="SafeUpText">SafeUp</span>
            </div>

            @Html.Partial("~/Views/Partials/LoggedIn/NavbarTopPartial.cshtml")

        </nav>

        @* ====================Menu boczne i content ====================== *@

        <div id="side-nav-and-content" class="row">
            
            @Html.Partial("~/Views/Partials/LoggedIn/NavbarLeftPartial.cshtml")

            <div id="content-col" class="col-lg-10">

                @RenderBody()

            </div>
        </div>

    </div>

    <!-- javascript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <!-- Scrolling Nav JavaScript -->
    <script src="~/Scripts/scrolling-nav.js"></script>
    <script src="~/Scripts/jquery.easing.min.js"></script>
    <!--AJAX-->
    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

</body>
</html>
