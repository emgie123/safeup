@using System.Web.UI.WebControls
<!--tutaj podstawowy template-->
@model SafeUp.Models.Login
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/robert.css" rel="stylesheet" type="text/css" />
    @RenderSection("LoggedInCssSection",required:false)
</head>
<body>

<nav class="navbar navbar-default  navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">SafeUp</a>
        </div>

        <div class="collapse navbar-collapse" id="collapse">

            <ul class="nav navbar-nav navbar-left">
                <li><a class="page-scroll" href="@Url.Action("Index", "Home")#home"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                <li><a class="page-scroll" href="@Url.Action("Index", "Home")#about">O projekcie</a></li>
                <li><a class="page-scroll" href="@Url.Action("Index", "Home")#download"><span class="glyphicon glyphicon-download-alt"></span> Do pobrania</a></li>
                <li><a class="page-scroll" href="@Url.Action("Index", "Home")#contact">Kontakt</a></li>
            </ul>


            <div class="navbar-form navbar-right" style="color: white;">
                Witaj, <strong><a href="@Url.Action("LoggedIn", "Home")"></a>@ViewBag.UserName!&nbsp;&nbsp;</strong>
                @Html.ActionLink("Wyloguj", "Index", "Home", null, new {@class = "btn btn-danger", type = "button", style = "border-radius:0px"})
            </div>



        </div>
    </div>
</nav>
@* Menu boczne *@
<div class="container-fluid" id="side-nav-and-content">
    <div class="row" style="margin: 0;">
        <div class="col-lg-2" style="padding: 0">

                <ul class="sidebar-nav">
                    @*<li role="presentation" class="active"><a href="#">Profil</a></li>*@
                    <li role="presentation" class="active"></li>
                    <li role="presentation">
                        @Ajax.ActionLink("Profil", "UserProfile", new AjaxOptions()
                        {
                            UpdateTargetId = "content-div",
                            HttpMethod = "GET",
                            InsertionMode = InsertionMode.Replace,
                            LoadingElementId = "loading"
                        })
                    </li>
                    <li role="presentation">
                        @Ajax.ActionLink("Grupy", "UserGroups", new AjaxOptions()
                        {
                            UpdateTargetId = "content-div",
                            HttpMethod = "GET",
                            InsertionMode = InsertionMode.Replace,
                            LoadingElementId = "loading"
                        })
                    </li>
                    <li role="presentation">
                        @Ajax.ActionLink("Statystyki", "UserStats", new AjaxOptions()
                        {
                            UpdateTargetId = "content-div",
                            HttpMethod = "GET",
                            InsertionMode = InsertionMode.Replace,
                            LoadingElementId = "loading"
                        })
                    </li>

                </ul>

            
        </div>

        <div id="content-div" class="col-lg-10">

            @RenderBody()

        </div>
    </div>


</div>

 
   






<!-- javascript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <!-- Scrolling Nav JavaScript -->
    <script src="~/Scripts/scrolling-nav.js"></script>
    <script src="~/Scripts/jquery.easing.min.js"></script>
    <!--AJAX-->
    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

</body>
</html>
