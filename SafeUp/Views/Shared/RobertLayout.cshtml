@using System.Web.UI.WebControls
<!--tutaj podstawowy template-->
@model SafeUp.Models.Login
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/robert.css" rel="stylesheet" type="text/css" />
    <link href="~/Scripts/bootstrap.js">
</head>
<body>

    <nav class="navbar navbar-default  navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#home">SafeUp</a>
            </div>

            <div class="collapse navbar-collapse" id="collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li><a class="page-scroll" href="#home"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                    <li><a class="page-scroll" href="#about">O projekcie</a></li>
                    <li><a class="page-scroll" href="#download"><span class="glyphicon glyphicon-download-alt"></span> Do pobrania</a></li>
                    <li><a class="page-scroll" href="#contact">Kontakt</a></li>
                </ul>
                <form class="navbar-form navbar-right" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Login">
                        <input type="text" class="form-control" placeholder="Password">
                    </div>
                    <button type="button" class="btn btn-success">Zaloguj</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Intro Section -->
    <section id="home" class="intro-section">
        <div class="container">
            <div class="jumbotron">
                <img src="~/Resources/logo.png" />

            </div>
        </div>
    </section>


    <!-- About Section -->
    <section id="about" class="about-section">
        <div class="container">
            <div class="jumbotron">
                <img src="~/Resources/logo.png" />
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section id="download" class="services-section">
        <div class="container">
            <div class="jumbotron">
                <img src="~/Resources/logo.png" />
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact-section">
        <div class="container">
            <div class="jumbotron">
                <img src="~/Resources/logo.png" />
            </div>
        </div>
    </section>


    <article>@RenderBody()</article>



    <!-- javascript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <!-- Scrolling Nav JavaScript -->
    <script src="~/Scripts/scrolling-nav.js"></script>
    <script src="~/Scripts/jquery.easing.min.js"></script>
</body>
</html>
