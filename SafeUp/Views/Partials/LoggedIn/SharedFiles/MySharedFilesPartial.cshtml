@model SafeUp.Models.LoggedIn.User

@{

    Layout = null;

}

<div id="partial-content" class="row">
    <div class="col-lg-12">

        <h2>Współdzielone pliki</h2>
        <a href="#" class="btn btn-success" type="button" style="border-radius: 0; margin: 20px;">Dodaj plik</a>


        <ul id="files-list">
            @foreach (var file in Model.FileList2)
            {
                <li>
                    @Html.CheckBoxFor(x => file.IsChecked)

                    @Ajax.ActionLink(file.Name, "File", "LoggedIn", new { CurrentName = file.Name, CurrentDateTime = file.DateOfUpload, CurrentOwner = file.Owner }, new AjaxOptions()
                        {
                            UpdateTargetId = "content-col",
                            HttpMethod = "GET",
                            InsertionMode = InsertionMode.Replace,
                            LoadingElementId = "loading"
                        })

                </li>
            }
        </ul>
    </div>
</div>
