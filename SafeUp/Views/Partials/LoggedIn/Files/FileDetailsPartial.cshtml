@model SafeUp.Models.LoggedIn.File
@{
    Layout = null;
}


<div id="partial-content" class="row">
    <div class="col-lg-12">
        <ul>
            <li>Nazwa pliku: @Model.Name</li>
            <li>Data dodania: @Model.DateOfUpload</li>
            <li>Właściciel: @Model.Owner</li>
            <li>Wielkość pliku: @Model.Size</li>
        </ul>
    </div>

    <br/>

    @Ajax.ActionLink("Pobierz", "UserSharedfiles", "MySharedFiles", new AjaxOptions()
                        {
                            UpdateTargetId = "content-col",
                            HttpMethod = "GET",
                            InsertionMode = InsertionMode.Replace,
                            LoadingElementId = "loading"
                        })
    <br/>

    @Ajax.ActionLink("Udostępnij", "UserSharedfiles", "MySharedFiles", new AjaxOptions()
                        {
                            UpdateTargetId = "content-col",
                            HttpMethod = "GET",
                            InsertionMode = InsertionMode.Replace,
                            LoadingElementId = "loading"
                        })

    <br/>
    @Ajax.ActionLink("Powrót", "UserFiles", "MyFiles", new AjaxOptions()
                        {
                            UpdateTargetId = "content-col",
                            HttpMethod = "GET",
                            InsertionMode = InsertionMode.Replace,
                            LoadingElementId = "loading"
                        })


</div>




