@model SafeUp.Models.ViewModels.Groups.AllUserGroups

@{
    Layout = null;
}

<div id="partial-content" class="row">
    <div class="col-lg-12">
        <h2>Moje grupy</h2>
        <div class="panel panel-default">
            <table class="table">
                <thead>
                    <tr>
                        <th>Lp.</th>
                        <th>Nazwa grupy</th>
                        <th>Data utworzenia</th>
                        <th colspan="2"></th>
                    </tr>
                </thead>
                <tbody>
                    @{int counter = 0;}
                    @foreach (var group in Model.OwnedGroups)
                    {
                        counter++;
                        <tr>
                            <td>@counter</td>
                            <td>@group.Name</td>
                            <td>@group.CreatedOn</td>

                            <td>
                                @Ajax.ActionLink("Udostępnione pliki", "ShowGroupFiles", "MyGroups",
                                    new {groupNumber = group.ID},
                                    new AjaxOptions()
                                    {
                                        UpdateTargetId = "modal-content",
                                        HttpMethod = "GET",
                                        InsertionMode = InsertionMode.Replace,
                                        LoadingElementId = "loading"
                                    },
                                    new {@class = "btn btn-info", type = "button", style = "border-radius:0;", data_toggle = "modal", data_target = "#modal-div"})
                            </td>
                            <td>
                                <a href="#" class="btn btn-success" type="button" style="border-radius: 0;">Dodaj plik</a>
                            </td>
                        </tr>


                    }
                </tbody>


            </table>


            <div id="modal-div" class="modal fade" style="margin-top: 5%;">
                <div class="modal-dialog" style="width: 900px;">
                    <div id="modal-content">

                    </div>
                </div>
            </div>
        </div>
        <ul id="files-list">
            <!-- lista -->
        </ul>


    </div>

</div>


