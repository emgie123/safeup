@model SafeUp.Models.ViewModels.Groups.AllGroupFiles

@{

    Layout = null;
    

}

<div id="partial-content" class="row">
    <div class="col-lg-12">
        <h2>@Model.GroupName</h2>
        <div class="panel panel-default">
            <table class="table">
                <thead>
                    <tr>
                        <th>Lp.</th>
                        <th>Nazwa pliku</th>
                        <th>Data dodania</th>
                        <th>Właściciel</th>
                        <th>Rozmiar</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{int counter = 0;}
                    @foreach (var file in Model.FileList)
                {
                    counter++;
                        <tr>
                            <td>@counter</td>
                            <td>@file.Name</td>
                            <td>@file.CreatedOn</td>
                            <td>@file.Owner</td>
                            <td>@file.Size</td>
                            <td><button id="moreButton" type="button" class="btn-info" data-toggle="modal" data-target="#model_@counter">Więcej</button></td>
                        </tr>


                }
                </tbody>


            </table>

            <div class="modal fade bs-example-modal-lg" id="model_@counter" tabindex="-1" role="dialog" aria-labelledby="model_@counter" aria-hidden="true">
                <div class="modal-dialog modal-xs">
                    <div class="modal-content">
                        ...
                    </div>
                </div>
            </div>
        </div>
        @*

        *@
        <div class="row">

            <div class="col-xs-4">
                <a href="#" class="btn btn-success" type="button" style="border-radius: 0; margin: 20px;">Dodaj plik</a>


                <a href="#" class="btn btn-success" type="button" style="border-radius: 0; margin: 20px;">Udostępnij</a>
            </div>
           
            <div class="col-xs-offset-6 col-xs-2">
                @Ajax.ActionLink("Powrót", "UserGroups", "MyGroups",
                null,
                new AjaxOptions()
                {
                    UpdateTargetId = "partial-content",
                    HttpMethod = "GET",
                    InsertionMode = InsertionMode.Replace,
                    LoadingElementId = "loading"
                },
                new { @class = "btn btn-warning", type = "button", style = "border-radius:0px;padding: 6px 12px; margin:20px;" }
                )
            </div>
        </div>
       
      
        <ul id="files-list">
            <!-- lista -->
        </ul>


    </div>

</div>
